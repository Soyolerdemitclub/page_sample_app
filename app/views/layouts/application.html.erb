                        </p>
                    </div>
                </div>
            </section>
              <section id="works" class="works">
                <div class="container1">
                    <div class="section-heading">
                        <h1 class="title wow fadeInDown" data-wow-delay=".3s">Latest Works</h1>
                    </div>
                                <div class="row">
                                    <div class="col-sm-4 column-xs-1 epz">
                                    <% @papers = papers_contents %>
                                    <% @papers.limit(3).each do |paper| %>
                                    </div>
                <div class="alert1 alert-info1 releaseInfo1 col-sm-4 thumbnail1 row epz1 column-xs-1">
                <h3><%= link_to paper.slug, paper %></h3>
                <% end %>
            </div>
              </section>         
