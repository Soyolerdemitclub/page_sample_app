                            <li><%= link_to 'Login', user_session_path %></li>           
                            </ul>
                            <% end %>
                        </ul>
                    </div>
                </nav>
                <!-- /main nav -->
            </div>
        </header>
            <%= yield %>    
            <section id="feature">
                <div class="container">
                    <div class="section-heading">
                        <h1 class="title wow fadeInDown" data-wow-delay=".3s">Offer From Me</h1>
